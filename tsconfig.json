{
    "compilerOptions": {
        "module": "commonjs",
        "lib": [
            "es6"
        ],
        "outDir": "dist",
        "rootDir": "src",
        "target": "es2017",
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": [
        "src/**/*"
    ]
}